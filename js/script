let ul = window.document.querySelector('nav .ul');

function openMenu(){
       ul.classList.add('open');
}


function closeMenu(){
    ul.classList.remove('open');
}
 
 
const prevButton = document.querySelector('.carrossel-prev');
        const nextButton = document.querySelector('.carrossel-next');
        const slideContainer = document.querySelector('.depoimento-text');
        let index = 0;

        function showSlide(n) {
            const slides = document.querySelectorAll('.testemunho');
            const totalSlides = slides.length;
            index = (n + totalSlides) % totalSlides;
            const offset = -index * 100;
            slideContainer.style.transform = `translateX(${offset}%)`;
        }

        prevButton.addEventListener('click', () => {
            showSlide(index - 1);
        });

        nextButton.addEventListener('click', () => {
            showSlide(index + 1);
        });

        showSlide(index); // Show the initial slide